{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "supervisord-logs",
      "host": {
        "sourcePath": "/var/app/current/supervisord"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "anime-lineup",
      "image": "quay.io/tsukaby/anime-lineup",
      "essential": true,
      "memory": 1024
    },
    {
      "name": "c-antenna",
      "image": "quay.io/tsukaby/c-antenna",
      "essential": true,
      "memory": 2048,
      "mountPoints": [
        {
          "sourceVolume": "supervisord-logs",
          "containerPath": "/var/log/supervisor"
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "quay.io/tsukaby/tsukaby-apps-proxy",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "anime-lineup",
        "c-antenna"
      ],
      "mountPoints": []
    }
  ]
}